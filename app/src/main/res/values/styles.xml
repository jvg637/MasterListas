<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">
            @transition/transition_explode </item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowExitTransition">
            @transition/transition_explode </item>

        <item name="android:windowReenterTransition">
            @transition/transition_fade </item>
        <item name="android:windowReturnTransition">
            @transition/transition_fade </item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
         Para elementos comparticos
        <!--<item name="android:windowSharedElementEnterTransition">-->
            <!--@transition/transition_curva </item>-->
        <item name="android:windowSharedElementExitTransition">
            @transition/transition_curva </item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>
</resources>
